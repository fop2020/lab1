ZnakiPre='`~!@#$%^&*()_-=+"№:,.;{}|\<>/?'
  
import string
import re

kzp=0 #Общее кол-во знаков 
kbzp=0 #Кол-во символов без знаков препинания
kbp=0 #Кол-во символов без пробелов
word=0 #Кол-во слов
sentences=0 #Кол-во предложений

prbl=0 #Кол-во проблеов
znaki=0 #Кол-во знаков препинания

with open('steam_description_data.csv', encoding='utf-8') as y:
    for line in y:
        kzp+=len(line)
        prbl= line.count(' ')
        for znak in ZnakiPre:
            znaki+=line.count(znak)
        kbp=kzp-prbl
        kbzp=kzp-znaki
        word+=len(line.split())
        sentences += len(re.findall(r"([A-Z][^\.!?]*[\.!?])", line))

print('Общее кол-во знаков: ',kzp)
print('Кол-во символов без знаков препинания: ',kbzp)
print('Кол-во символов без пробелов',kbp)
print('Кол-во слов: ',word)
print('Кол-во предложений: ',sentences)

